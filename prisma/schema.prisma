// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DRIZZLE_DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model Donghua {
  id    String @id @default(uuid())
  title String
  link  String
  site  String
}

model Chapter {
  id     String @id @default(uuid())
  title  String
  link   String
  site   String
  videos Json[]
}
