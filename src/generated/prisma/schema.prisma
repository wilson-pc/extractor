generator client {
  provider   = "prisma-client-js"
  output     = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donghua {
  id    String @id @default(uuid())
  title String
  link  String
  site  String
}

model Chapter {
  id     String @id @default(uuid())
  title  String
  link   String
  site   String
  videos Json[]
}
